<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TemplateDao">
    <resultMap type="Template" id="TemplateResultMap">
        <id column="template_id" property="templateId"/>
        <id column="cn_name" property="cnName"/>
        <id column="content" property="content"/>
        <id column="create_time" property="createTime"/>
        <id column="create_editor" property="createEditor"/>
        <id column="type" property="type"/>
    </resultMap>
    <select id="getTemplateList" resultMap="TemplateResultMap">
        SELECT * FROM template ORDER BY template_id DESC limit #{limit} offset #{offset} </select>
    <select id="getTemplate" resultMap="TemplateResultMap">
        SELECT * FROM template WHERE template_id = #templateId</select>
    <delete id="deleteTemplate">
        DELETE FROM template WHERE template_id = #{templateId}
    </delete>
    <update id="updateTemplate">UPDATE template
        <set>
            <if test="templateId != null">template_id=#{templateId},</if>
            <if test="cnName != null">cn_name=#{cnName},</if>
            <if test="content != null">content=#{content},</if>
            <if test="createTime != null">create_time=#{createTime},</if>
            <if test="createEditor != null">create_editor=#{createEditor},</if>
            <if test="type != null">type=#{type},</if>
        </set>
        WHERE template_id = #{templateId}
    </update>
    <insert id="insertTemplate" useGeneratedKeys="true">
        INSERT INTO template  ( cn_name , content , create_time , create_editor , type ) VALUE   (cnName , content , createTime , createEditor , type ) </insert>
    <select id="getTemplateTotal" resultType="int">
        SELECT count(*) FROM template
        <where>
            <if test="templateId != null">
                template_id = #{templateId}
            </if>
            <if test="cnName != null">
                cn_name = #{cnName}
            </if>
            <if test="content != null">
                content = #{content}
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
            <if test="createEditor != null">
                create_editor = #{createEditor}
            </if>
            <if test="type != null">
                type = #{type}
            </if>
        </where>
    </select>
    <select id="getCount" resultType="int">
        SELECT count(*) FROM template
        </select>
</mapper>